---
layout: 'default'
title: 'Jobs'
nav: 'jobs'
---
<div class="content lab">
	<% for post in @getFilesAtPath("jobs").toJSON(): %>
		<% if post.author: %>
			<article>
				<div class="avatar">
					<img src="/images/<%= @getAuthorPic post.author %>" alt="<%= @getAuthorName post.author %>">
					<a href="#"><img src="/images/twitter-icon.png" alt="Twitter"><%= @getAuthorTwitter post.author %></a>
				</div>
				<a href="<%= post.url %>"><h1><%- post.title %></h1></a>
				<cite>by <%= @getAuthorName post.author %></cite>
				<time><%- post.date.toShortDateString() %></time>
				<p><%- post.content %></p>
			</article>
		<% end %>
	<% end %>
</div>